<h1 class="mb-4"><%= t("questions.new.new_question") %></h1>
<div class='article'>
  <div class="card-body bg-white">
    <%= form_with model: @question do |f| %>
      <div class="mb-3 row">
        <%= f.label t("questions.new.new_title"), class: "col-sm-1 col-form-label" %><br/>
        <div class="col-sm-9">
          <%= f.text_field :title, required: true, minlegth: 5, placeholder: "Title", class: "form-control" %>
        </div>
      </div>
      <div class="mb-3 row"> 
        <%= f.label t("questions.new.new_text"), class: "col-sm-1 col-form-label" %><br/>
        <div class="col-sm-9">
          <%= f.text_area :body, required: true, minlegth: 4, class: "form-control" %>
        </div>
      </div>
      <%= f.submit t("questions.new.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>